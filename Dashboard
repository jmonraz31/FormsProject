        private void Form1_Load(object sender, EventArgs e)
        {
            String[] files = Directory.GetFiles(@"C:\Users\gonzalez.alejandro\Documents\TEST1");
            DataTable table = new DataTable();
            table.Columns.Add("File Name");

            for (int i = 0; i < files.Length; i++)
            {
                FileInfo file = new FileInfo(files[i]);
                table.Rows.Add(file.Name);
            }

            dataGridView1.DataSource = table;

            String[] files1 = Directory.GetFiles(@"C:\Users\gonzalez.alejandro\Documents\TEST2");
            DataTable table1 = new DataTable();
             table1.Columns.Add("File Name");

            for (int i = 0; i < files1.Length; i++)
            {
                FileInfo file1 = new FileInfo(files1[i]);
                table1.Rows.Add(file1.Name);
            }

            dataGridView2.DataSource = table1;


